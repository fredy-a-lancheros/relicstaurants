{
  "name": "relicstaurants",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "restaurantService",
    "menuService",
    "checkoutService"
  ],
  "scripts": {
    "install:all": "npm install",
    "start:all": "concurrently \"npm --workspace=restaurantService run start\" \"npm --workspace=menuService run start\" \"npm --workspace=checkoutService run start\" \"npm --workspace=frontend run start\"",
    "start:restaurant": "npm --workspace=restaurantService run start",
    "start:menu": "npm --workspace=menuService run start",
    "start:checkout": "npm --workspace=checkoutService run start",
    "start:frontend": "npm --workspace=frontend run start"
  },
  "devDependencies": {
    "concurrently": "^7.3.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4"
  }
}
